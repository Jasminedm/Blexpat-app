<%- include('partials/header') -%>
<link rel="stylesheet" href="/css/countdown.css">
<body class="showPlanBody">
  <section class="showPlanSubBody">
<section class="contentSect">
<section class="row showPlanBanner clearfix">
  <section id="count">
    <div id="countdown">
        <div id='tiles' data-trip="<%= plan.arrive%>"></div>
        <div class="labels">
          <li>Days</li>
          <li>Hours</li>
          <li>Mins</li>
          <li>Secs</li>
        </div>
      </div>
  </section>
  
</section>

<section class="showPlanSect">
  
<br>
<h1><%= plan.location %></h1> <br>
<section>
  <section class="imgItenSect">
<img src="<%= plan.postImg %>" class="showPlanImg" alt="">

<section class="itencol">
    <h1>Build your Itenerary</h1><br>

    <button class="nextItem buttonClass" type="button">Add New</button>
    <button onclick="updateItenerary('<%= plan._id %>')" class="save buttonClass" type="button">Save</button>
    <!-- <button class="done" type="button">Done</button> -->
    <button id="clear" onclick="clearTask()" type="button" class="buttonClass">Clear All</button>
    <br><br>
    <ul id="uL">
      <% if(plan.itenerary && plan.itenerary.length > 0){ %>
        <% for(let i = 0; i<plan.itenerary.length;i++){ %>
          <li><input class="checkBox" type="checkbox"><input class="textInput" type="text" value="<%= plan.itenerary[i] %>" name="list"></li>
      <% } %>
      <% }else {%>
        <li><input class="checkBox" type="checkbox"><input class="textInput" type="text" name="list"></li>
     <% } %>
    </ul><br>
    
  </section>
</section>
<br><br>
    <!-- <h2 class="congrats"></h2> -->

    <section class="mapSect">
      <div name ="budgetPaid" class="dropdown">
        <div class="container">
          <input id="from" placeholder="your location" />
          <input id="to" placeholder="your destination" />
          <button class="get buttonClass">Directions</button>
          <input class="category" type="text" id="category" placeholder="category">
          <input class="place" type="text" id="place" placeholder="place">
          <button onclick="getAttractions()" class="attractions buttonClass">Attractions</button>
          <br><br>
          <div id="googleMap"></div>
          <div id="output"></div>
          <ul id="steps"></ul>
        </div>
  </section> 
  
<div class="container">
  <ul class="pictures card-deck row">
    
  </ul>
</div>






</section>
</section>
</section>
<section class="quizSect">
  <h6>Discover a book to inspire your travel plans!</h6>
  <div data-tf-widget="kYxFSQZz" data-tf-opacity="80" data-tf-iframe-props="title=Find a book to inspire your journey!" data-tf-medium="snippet" style="width:100%;height:300px;"></div><script src="//embed.typeform.com/next/embed.js"></script>
</section>

</section>

<script src="../JS/countdown.js"></script>
<script src="../JS/main.js"></script>
<script>
const id = '<%= plan._id %>'
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC0F0X8mvjnkAdC9W8R2l7HruLwmxwfPd8&libraries=places"></script>
<script src="../JS/maps.js"></script>

  
</body>
<%- include('partials/footer') -%>
